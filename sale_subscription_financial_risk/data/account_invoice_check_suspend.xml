<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <record id="check_account_service_suspensions" model="ir.cron">
            <field name="name">Suspended Services Check - Payments</field>
            <field name="model_id" ref="model_account_invoice"/>
            <field name="active" eval="True" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="priority">1</field>
            <field name="doall" eval="False"/>
            <field name="state">code</field>
            <field name="code">
if record.run_suspension_check == True:
  records = env['sale.subscription'].search(['partner_id', '=', record.partner_id])
  for record_id in records:
    record_id.check_service_suspensions()
            </field>
        </record>
    </data>
</odoo>
